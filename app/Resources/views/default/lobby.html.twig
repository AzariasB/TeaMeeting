
{% extends 'base.html.twig' %}

{% block title %}
    Lobby
{% endblock %}

{% block stylesheets %}
    {% if is_granted('ROLE_ADMIN') %}
        <link href="{{ asset('assets/css/lobby_admin.css') }}" rel="stylesheet" />
    {% endif %}
{% endblock %}

{% block javascripts %}
    {% if is_granted('ROLE_ADMIN') %}
        <script src="{{ asset('assets/js/lobby_admin.js') }}"></script>
    {% endif %}
{% endblock %}

{% block body %}
    {% include 'toolbar.html.twig' %}
    {% if is_granted('ROLE_ADMIN') %}
        {% include 'lobby/admin.html.twig' %}
    {% else %}
        {% include 'lobby/user.html.twig' %}
    {% endif %}
{% endblock %}