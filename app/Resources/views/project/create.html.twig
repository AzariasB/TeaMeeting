
{% extends 'base.html.twig' %}

{% block title %}
    Create project
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.projectName) }}
    {{ form_row(form.leader) }}
    {{ form_row(form.secretary) }}

    <div>
        <h3>Roles</h3>
        <ul class="roles" data-prototype="{{ form_widget(form.roles.vars.prototype)|e }}" >
            {% for role in form.roles %}
                <li>{{ form_row(role.roleName) }}</li>
                {% endfor %}
        </ul>
    </div>


    <div>
        <button type="submit">Create</button>
    </div>
    {{ form_end(form) }}
    <script src="{{ asset('js/createProject.js') }}"></script>
{% endblock %}