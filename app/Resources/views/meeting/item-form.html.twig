

{% set formClass = {'attr': {'class': 'form-control' }} %}
{% macro errorClass(formpart) %}
    {% if not formpart.vars.valid %}
        has-error
    {% endif %}
{% endmacro %}
{% import _self as s %}

<div class="modal-header">
    <button type="button" class="close" 
            data-dismiss="modal" 
            aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">
        Create an agenda item
    </h4>
</div>

{{ form_start(form,{'attr':{'id':'form-create-item'} }) }}
<div class="modal-body">
    <div class="row">
        <div class="col-xs-6 {{ s.errorClass(form.title) }}">
            {{ form_row(form.title,formClass) }}
        </div>
        <div class="col-xs-6 {{ s.errorClass(form.proposer) }}">
            {{ form_row(form.proposer,formClass) }}
        </div>
    </div>
    <input id="project-id" name="project-id" type="hidden" value="" />
</div>
<div class="modal-footer">
    <button id="submit-create-project" class="btn btn-default" type="submit">Create</button>
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>
{{ form_end(form) }}