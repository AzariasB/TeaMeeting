<ul class="list-group" >
    <li ng-repeat="request in ctrl.requests" 
        class="list-group-item"
        ng-class="{ 
            'list-group-item-danger' : request.state == 1,
            'list-group-item-success': request.state == 4,
            'list-group-item-warning': request.state == 2,
            'list-group-item-info'   : request.state == 3
        }" 
        ng-attr-id="// item.id //" >
        // request.content //
        the // request.date | date : 'dd/MM/yyyy' //
        <span class="pull-right">
            Proposed by // request.sender.name //
        </span>
    </li>
</ul>