{# twig #}

{% extends "base.html.twig" %}

{% block javascripts %}
    <script src="{{ asset('assets/vendor/chartist/dist/chartist.min.js') }}" ></script>
    <script src='{{ asset('assets/js/editMeeting.js') }}'></script>
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/vendor/chartist/dist/chartist.min.css') }}" rel="stylesheet"  />
    <link href="{{ asset('assets/css/meeting-style.css') }}" rel="stylesheet" />
{% endblock %}

{% set meetYes   = meeting.numberOfYes()   %}
{% set meetNo    = meeting.numberOfNo()    %}
{% set meetMaybe = meeting.numberOfMaybe() %}
{% set meetUnknk = meeting.numberOfUnknown() %}
{% set agenda    = meeting.getCurrentAgenda() %}

{% block body %}
    {% if is_granted('ROLE_USER') %}
        {% include 'toolbar.html.twig' %}
    {% endif %}
    <div class="col-xs-12 col-sm-6">
        <h3>Current agenda</h3>
        <h4>Items : </h4>
        <ul class="list-group" >
            {% for item in agenda.getItems() %}
                <li class="list-group-item" >
                    {{ item.title }}
                    <span class="pull-right">
                        Proposed by {{ item.proposer.username }}
                    </span>
                </li>
            {% endfor %}
        </ul>
        {% if canEdit %}
            <a href="{{ path('add-agenda-item',{'agendaId' : agenda.id }) }}" 
               class="btn btn-default" 
               id="add-meeting" >
                <i class="glyphicon glyphicon-plus" ></i>
                Add item
            </a>
        {% else %} 
            <a href="#" class="btn btn-default" >
                <i class="glyphicon glyphicon-send" > </i>
                Send a request to the chairman
            </a>
        {% endif %}
    </div>
    <div class="col-xs-12 col-sm-6 text-center">
        <h3>Meeting's informations : </h3>
        <p>
            <strong>Chairman :</strong> {{ meeting.chairman.username }}
            -
            <strong>Secretary :</strong> {{ meeting.secretary.username }}
        </p>
        <p>
            <strong>Date : </strong> {{ meeting.date|date('d/m/Y H:i') }}
            -
            <strong>Duration :</strong> {{ meeting.duration|date('H:i') }}
        </p>
        <p>
            <strong>Room : </strong> {{ meeting.room }}
        </p>

        <h3>Statistics for the meeting</h3>
        <div class="ct-chart" ></div>
        <ul class="list-group list-inline" >
            {% for ans in meeting.answers %}
                <li class="list-group-item list-third" >
                    <strong>{{ ans.user.username }}</strong>:
                    {{ ans.answerString() }}
                </li>
            {% endfor %}
        </ul>
    </div>
    <script>
        $(document).ready(function () {
            var data = {
                labels: ['Yes ({{ meetYes }})', 'Maybe ({{ meetMaybe }})',
                    'No ({{ meetNo }})', 'Not answered ({{ meetUnknk }})'],
                series: [
        {{ meetYes }},
        {{ meetMaybe }},
        {{ meetNo }},
        {{ meetUnknk }}
                    ]
                };
                var options = {
                    'height': 300,
                    'ignoreEmptyValues': true,
                    'classNames': {
                        'label': 'custom-label'
                    }
                };
                new Chartist.Pie('.ct-chart', data, options);
            });
    </script>
    <footer>
        <a href="{{ path('seeproject', { 'projId' : meeting.project.id}) }}">
            Back to the project
        </a> 
    </footer>

    <div class="modal fade" id="modal-main" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content" id="modal-main-content" >
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
{% endblock %}