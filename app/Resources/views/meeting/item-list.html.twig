{% macro listStyle(item) %}
    {% if item.isPending() %}
        list-group-item-danger
    {% elseif item.isAgreed() %}
        list-group-item-success
    {% elseif item.isNotedInAgenda() %}
        list-group-item-active
    {% else %}
        list-group-item-warning
    {% endif %}
{% endmacro %}



<h4>Items : </h4>
<ul class="list-group" >
    {% for item in agenda.getItems() %}
        <li title="{{ item.stateToString() }}" class="list-group-item {{ _self.listStyle(item) }}" >
            {{ item.title }}
            <span class="pull-right">
                Proposed by {{ item.proposer.username }}
            </span>
        </li>
    {% endfor %}
</ul>