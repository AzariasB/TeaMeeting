
{% set formClass = {'attr': {'class': 'form-control' }} %}
{% macro errorClass(formpart) %}
    {% if not formpart.vars.valid %}
        has-error
    {% endif %}
{% endmacro %}
{% import _self as s %}

<div class="modal-header">
    <button type="button" class="close" 
            data-dismiss="modal" 
            aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">
        {% block modalTitle %}
            Create
        {% endblock %}
    </h4>
</div>

{{ form_start(form,{'attr':{'id': formId } }) }}
<div class="modal-body">
    {% block modalBody %}
    {% endblock %}
</div>
<div class="modal-footer">
    <button id="submit-create-project" class="btn btn-default" type="submit">
        {% block buttonConfirm %}
            Create
        {% endblock %}
    </button>
    <button type="button" class="btn btn-default" data-dismiss="modal">
        {% block buttonCancel %}
            Close
        {% endblock %}
    </button>
</div>
{{ form_end(form) }}